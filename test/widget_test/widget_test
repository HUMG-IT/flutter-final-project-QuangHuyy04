// test/widget_test/app_test.dart

import 'package:bookverse/main.dart';
import 'package:flutter/material.dart';
import 'package:flutter_test/flutter_test.dart';

void main() {
  testWidgets('Ứng dụng BookVerse khởi động thành công', (WidgetTester tester) async {
    // Khởi động app thật của bạn
    await tester.pumpWidget(const MyApp()); // hoặc BookVerseApp() tùy tên

    // Đợi app load xong
    await tester.pumpAndSettle();

    // Kiểm tra có hiện tiêu đề không
    expect(find.textContaining('BookVerse'), findsWidgets);
    expect(find.byType(FloatingActionButton), findsOneWidget); // nút +
    expect(find.byType(AppBar), findsOneWidget);
  });
}